        }
      }
    }
  
  },
  "clinicalinfotbform":{
   "title": "RMRCT CLINICAL INFORMATION FORM FOR TB PATIENTS",
    "printing": {
      "title": "Bahmni",
      "header": "RMRCT CLINICAL INFORMATION FORM FOR TB PATIENTS",
      "logo": "../images/bahmniLogo.png"
    },
    "sections": {
      "Death Certificate": {
        "type": "custom",
        "displayOrder": 1,
        "config": {
          "title": "RMRCT CLINICAL INFORMATION FORM FOR TB PATIENTS",
          "template": "<clinicalinfo-tb></clinicalinfo-tb>"
        }
      }
    }
  
  },
    "hindujaCDSTForm":{
   "title": "Hinduja CDST Form",
    "printing": {
      "title": "Bahmni",
      "header": "Jan Swashya Sahyog ",
