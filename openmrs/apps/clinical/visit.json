{
    "general": {
        "title": "General",
        "displayByDefault": true,
        "printing": {
            "title": "Jan Swasthya Sahyog Community Health Centre",
            "header": "Visit",
            "logo": "../images/jss-icon.png"
        },
        "defaultSections": true,
        "sections": {
            "pivotTable": {
                "type": "pivotTable",
                "title": "Pivot Table",
                "config": {
                    "groupBy": "encounters",
                    "obsConcepts": [
                        "Weight",
                        "Vitals"
                    ],
                    "drugConcepts": [],
                    "labConcepts": []
                }
            }
        }
    },
    "dischargeSummary": {
        "title": "Discharge Summary",
        "displayByDefault": true,
        "printing": {
            "title": "Jan Swasthya Sahyog Community Health Centre",
            "header": "Discharge Summary",
            "logo": "../images/jss-icon.png"
        },
        "sections": {
            "patientInformation": {
                "type": "patientInformation",
                "config": {
                    "addressFields": [
                        "cityVillage",
                        "address2",
                        "address3",
                        "countyDistrict"
                    ],
                    "title": "PatientInformation",
                    "patientAttributes": []
                }
            },
            "admissionDetails": {
                "type": "admissionDetails",
                "config": {
                    "showDetailsButton": true
                }
            },
            "atAdmission": {
                "type": "observation",
                "title": "At Admission",
                "config": {
                    "conceptNames": [
                        "Weight",
                        "Height",
                        "BMI"
                    ],
                    "scope": "initial"
                }
            },
            "lastRecordedWeight": {
                "type": "observation",
                "title": "Last Recorded Weight",
                "config": {
                    "conceptNames": ["Weight"],
                    "scope": "latest"
                }
            },
            "diagnoses": {
                "type": "diagnosis",
                "config": {
                    "title": "Diagnoses",
                    "showCertainty": false,
                    "showOrder": false,
                    "showDetailsButton": true
                }
            },
            "clinicalNotes": {
                "type": "observation",
                "title": "Clinical Notes",
                "config": {
                    "conceptNames": [
                        "History and Examination Notes",
                        "Discharge Summary, Admission Indication",
                        "Hospital Course",
                        "Discharge Summary, Surgical Indication",
                        "Date of Operation",
                        "Operative Procedure",
                        "Lab Investigation Notes",
                        "Radiology Notes",
                        "Other Notes"
                    ],
                    "scope": "latest",
                    "numberOfVisits": "1"
                }
            },
            "labInvestigations": {
                "type": "investigationResult",
                "config": {
                    "title": "Lab Investigations",
                    "showChart": true,
                    "showTable": false,
                    "showNormalLabResults": true,
                    "showCommentsExpanded": true,
                    "showAccessionNotes": true,
                    "numberOfVisits": 10,
                    "initialAccessionCount": 1,
                    "latestAccessionCount": 1
                }
            },
            "treatments": {
                "type": "treatment",
                "config": {
                    "title": "Treatments",
                    "showFlowSheet": false,
                    "showListView": true,
                    "showOtherActive": true,
                    "showDetailsButton": true,
                    "showRoute": true,
                    "showDrugForm": true
                }
            },
            "adviceOnDischarge": {
                "type": "observation",
                "title": "Advice on Discharge",
                "config": {
                    "conceptNames": [
                        "Advice on Discharge",
                        "Follow up Date",
                        "Discharge Summary, Plan for follow up"
                    ],
                    "scope": "latest"
                }
            }
        }
    }
}
